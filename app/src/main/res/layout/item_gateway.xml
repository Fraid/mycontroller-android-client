<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_head"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/table_border"
        android:orientation="horizontal"
        android:paddingLeft="1dp"
        android:paddingRight="1dp"
        android:paddingTop="1dp"
        android:weightSum="2"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_marginRight="1dp"
            android:background="@color/table_head_bg"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:background="@color/table_head_bg"
            android:gravity="center"
            android:text="Name"
            android:textColor="@color/cell_dark"
            android:textAlignment="center"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/table_head_bg"
            android:gravity="center"
            android:text="Type"
            android:textColor="@color/cell_dark"
            android:textAlignment="center"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/table_border"
        android:orientation="horizontal"
        android:paddingLeft="1dp"
        android:paddingRight="1dp"
        android:paddingTop="1dp"
        android:weightSum="2">

        <ImageView
            android:id="@+id/iv_enabled"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_marginRight="1dp"
            android:background="@color/cell_light"
            android:scaleType="center"
            android:src="@drawable/circle_disabled" />

        <TextView
            android:id="@+id/tv_gw_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:background="@color/cell_light"
            android:gravity="center"
            android:text="New Text"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/tv_gw_type"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/cell_light"
            android:gravity="center"
            android:text="New Text"
            android:textAlignment="center" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/table_border"
        android:orientation="horizontal"
        android:id="@+id/ll_bottom"
        android:visibility="gone"/>
</LinearLayout>